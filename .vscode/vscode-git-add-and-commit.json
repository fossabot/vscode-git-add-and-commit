{
  "prefillCommitMessage": {
    "disableOptionalMessages": true,
    "forceLowerCase": false,
    "ignoreFileExtension": true,
    "replacePatternWith": [
      { "pattern": ".gitignore: ", "with": "git: ignore " },
      { "pattern": ".git", "with": "git" },
      { "pattern": "CHANGELOG", "with": "changelog" },
      { "pattern": "LICENSE", "with": "license" },
      { "pattern": "package", "with": "npm" },
      { "pattern": "README", "with": "readme" },
      { "pattern": "src/", "with": "" }
    ],
    "withFileWorkspacePath": true,
    "withGuessedAction": true,
    "withGuessedCustomActions": [
      {
        "pattern": ".vscode/vscode-git-add-and-commit",
        "state": "MODIFIED",
        "with": ".vscode/vscode-git-add-and-commit: update"
      },
      {
        "pattern": "CHANGELOG",
        "state": "MODIFIED",
        "with": "CHANGELOG: update"
      },
      {
        "pattern": "LICENSE",
        "state": "MODIFIED",
        "with": "LICENSE: update"
      },
      {
        "pattern": "README",
        "state": "MODIFIED",
        "with": "README: update"
      }
    ]
  }
}
